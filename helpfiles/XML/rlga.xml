<?xml version="1.0" encoding="utf-8"?>
<HelpXML>
   <Title><!--This is simply the filename-->rlga</Title>
   <Purpose><!--This is the second line of the .m file--> VERIFICARE LINEE 134 -- 136 ALPHA NON TORNA PER NIENTE !!!!!!!!   &#xD;
</Purpose>
   <Description><!--Description section--></Description>
   <InpArgs><!--REQUIRED INPUT ARGUMENT SECTION-->
      <Item>
         <Name>X</Name>
         <ShortDesc>input data matrix</ShortDesc>
         <TypeInd>Matrix</TypeInd>
         <LongDesc>Input data as matrix of size&#xD;
            n-by-p</LongDesc>
         <Example> </Example>
         <DataType>single| double</DataType>
         <ReqArg>1</ReqArg>
         <Struct> </Struct>
      </Item>
      <Item>
         <Name>k</Name>
         <ShortDesc>number of clusters</ShortDesc>
         <TypeInd>Scalar</TypeInd>
         <LongDesc>Scalar which specifies the number&#xD;
             of clusters.</LongDesc>
         <Example> </Example>
         <DataType>single| double</DataType>
         <ReqArg>1</ReqArg>
         <Struct> </Struct>
      </Item>
      <Item>
         <Name>alpha</Name>
         <ShortDesc>a numeric value between 0 and 0.5</ShortDesc>
         <TypeInd>Scalar</TypeInd>
         <LongDesc>For the robust estimate of&#xD;
             LGA, specifying the percentage of points to be trimmed.&#xD;
             alpha must be a number in the interval [0 0.5]</LongDesc>
         <Example> </Example>
         <DataType>single| double</DataType>
         <ReqArg>1</ReqArg>
         <Struct> </Struct>
      </Item>
   </InpArgs>
   <OptArgs><!--OPTIONAL (NAME/PAIRS) INPUT ARGUMENT SECTION-->
      <Item>
         <Name>biter</Name>
         <ShortDesc>an integer for the number of different starting hyperplanes&#xD;
               to try</ShortDesc>
         <TypeInd>Integer</TypeInd>
         <LongDesc> </LongDesc>
         <Example> 'biter',1 &#xD;
               </Example>
         <DataType>double</DataType>
         <Struct> </Struct>
      </Item>
      <Item>
         <Name>niter</Name>
         <ShortDesc>an integer for the number of iterations to attempt for convergence</ShortDesc>
         <TypeInd>Integer</TypeInd>
         <LongDesc> </LongDesc>
         <Example> 'niter',1 &#xD;
               </Example>
         <DataType>double</DataType>
         <Struct> </Struct>
      </Item>
      <Item>
         <Name>showall</Name>
         <ShortDesc>If true then display all the outcomes, not just the best&#xD;
               one</ShortDesc>
         <TypeInd>Logical</TypeInd>
         <LongDesc> </LongDesc>
         <Example> 'showall','true' &#xD;
               </Example>
         <DataType>char</DataType>
         <Struct> </Struct>
      </Item>
      <Item>
         <Name>stand</Name>
         <ShortDesc>If true standardize the X matrix with the standard&#xD;
             deviation before fitting</ShortDesc>
         <TypeInd>Logical</TypeInd>
         <LongDesc> </LongDesc>
         <Example> 'stand','true' &#xD;
               </Example>
         <DataType>char</DataType>
         <Struct> </Struct>
      </Item>
      <Item>
         <Name>silent</Name>
         <ShortDesc>Text output</ShortDesc>
         <TypeInd>Logical</TypeInd>
         <LongDesc>If true, produces no text output during processing. &#xD;
             The default value is false&#xD;
               </LongDesc>
         <Example> 'silent','true' &#xD;
               </Example>
         <DataType>char</DataType>
         <Struct> </Struct>
      </Item>
      <Item>
         <Name>plots</Name>
         <ShortDesc>plot on the screen</ShortDesc>
         <TypeInd>Scalar</TypeInd>
         <LongDesc>If plots=1 a plot is showed on the screen with the&#xD;
             final allocation (and if size(X,2)==2 with the lines&#xD;
             associated to the groups). &#xD;
               </LongDesc>
         <Example> 'plots',1 &#xD;
               </Example>
         <DataType>double</DataType>
         <Struct> </Struct>
      </Item>
   </OptArgs>
   <OutArgs><!--OUTPUT ARGUMENT SECTION-->
      <Item>
         <Name>out</Name>
         <ShortDesc> </ShortDesc>
         <TypeInd> </TypeInd>
         <LongDesc> </LongDesc>
         <Struct>
            <ItemCell>
               <Value>cluster</Value>
               <Description>vector containing the cluster memberships.</Description>
            </ItemCell>
            <ItemCell>
               <Value>ROSS</Value>
               <Description>the Residual Orthogonal Sum of Squares for the solution.</Description>
            </ItemCell>
            <ItemCell>
               <Value>converged</Value>
               <Description>logical. True if at least one solution has converged.</Description>
            </ItemCell>
            <ItemCell>
               <Value>nconverg</Value>
               <Description>the number of converged solutions (out of biter starts).</Description>
            </ItemCell>
            <ItemCell>
               <Value>hpcoeff</Value>
               <Description>best hyerplane</Description>
            </ItemCell>
            <ItemCell>
               <Value>x</Value>
               <Description>the (scaled if selected) dataset.</Description>
            </ItemCell>
            <ItemCell>
               <Value>scaled</Value>
               <Description>logical. Is the data set scaled?</Description>
            </ItemCell>
            <ItemCell>
               <Value>k</Value>
               <Description>the number of clusters to be found.</Description>
            </ItemCell>
            <ItemCell>
               <Value>biter</Value>
               <Description>the biter setting used.</Description>
            </ItemCell>
            <ItemCell>
               <Value>niter</Value>
               <Description>the niter setting used.</Description>
            </ItemCell>
            <ItemCell>
               <Value>class</Value>
               <Description>'rlga'.</Description>
            </ItemCell>
         </Struct>
      </Item>
   </OutArgs>
