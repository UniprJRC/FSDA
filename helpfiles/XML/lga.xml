<?xml version="1.0" encoding="utf-8"?>
<HelpXML>
   <Title><!--This is simply the filename-->lga</Title>
   <Purpose><!--This is the second line of the .m file-->lga performs linear grouping analysis</Purpose>
   <Description><!--Description section--></Description>
   <InpArgs><!--REQUIRED INPUT ARGUMENT SECTION-->
      <Item>
         <Name>X</Name>
         <ShortDesc>input data matrix</ShortDesc>
         <TypeInd>Matrix</TypeInd>
         <LongDesc>Input data as matrix of size&#xD;
            n-by-p</LongDesc>
         <Example> </Example>
         <DataType>single| double</DataType>
         <ReqArg>1</ReqArg>
         <Struct> </Struct>
      </Item>
      <Item>
         <Name>k</Name>
         <ShortDesc>number of clusters</ShortDesc>
         <TypeInd>Scalar</TypeInd>
         <LongDesc>Scalar which specifies the number&#xD;
             of clusters.</LongDesc>
         <Example> </Example>
         <DataType>single| double</DataType>
         <ReqArg>1</ReqArg>
         <Struct> </Struct>
      </Item>
   </InpArgs>
   <OptArgs><!--OPTIONAL (NAME/PAIRS) INPUT ARGUMENT SECTION-->
      <Item>
         <Name>biter</Name>
         <ShortDesc>Hyperplane number</ShortDesc>
         <TypeInd>Integer</TypeInd>
         <LongDesc>number of different starting hyperplanes to try.&#xD;
               </LongDesc>
         <Example> 'biter',1&#xD;
               </Example>
         <DataType>double</DataType>
         <Struct> </Struct>
      </Item>
      <Item>
         <Name>niter</Name>
         <ShortDesc>Number of iterations</ShortDesc>
         <TypeInd>Positive integer</TypeInd>
         <LongDesc>Number of iterations to attempt for convergence.&#xD;
               </LongDesc>
         <Example> 'niter',1&#xD;
               </Example>
         <DataType>double</DataType>
         <Struct> </Struct>
      </Item>
      <Item>
         <Name>showall</Name>
         <ShortDesc>Type of display</ShortDesc>
         <TypeInd>Logical</TypeInd>
         <LongDesc>If true then display all the outcomes, not just the best one.&#xD;
               </LongDesc>
         <Example> 'showall','true'&#xD;
               </Example>
         <DataType>char</DataType>
         <Struct> </Struct>
      </Item>
      <Item>
         <Name>stand</Name>
         <ShortDesc>Data standardization</ShortDesc>
         <TypeInd>Logical</TypeInd>
         <LongDesc>If true standardize the X matrix with the standard&#xD;
             deviation before fitting.&#xD;
               </LongDesc>
         <Example> 'stand','true'&#xD;
               </Example>
         <DataType>char</DataType>
         <Struct> </Struct>
      </Item>
      <Item>
         <Name>silent</Name>
         <ShortDesc>Text ouptut</ShortDesc>
         <TypeInd>Logical</TypeInd>
         <LongDesc>If true, produces no text output during processing. The&#xD;
               default value is false.&#xD;
               </LongDesc>
         <Example> 'silent','true'&#xD;
               </Example>
         <DataType>char</DataType>
         <Struct> </Struct>
      </Item>
      <Item>
         <Name>plots</Name>
         <ShortDesc>plot on the screen</ShortDesc>
         <TypeInd>Scalar</TypeInd>
         <LongDesc>If plots=1 a plot is showed on the screen with the&#xD;
             final allocation (and if size(X,2)==2 with the lines&#xD;
             associated to the groups).&#xD;
               </LongDesc>
         <Example> 'plots',1&#xD;
               </Example>
         <DataType>double</DataType>
         <Struct> </Struct>
      </Item>
   </OptArgs>
   <OutArgs><!--OUTPUT ARGUMENT SECTION-->
      <Item>
         <Name>out</Name>
         <ShortDesc> </ShortDesc>
         <TypeInd> </TypeInd>
         <LongDesc> </LongDesc>
         <Struct>
            <ItemCell>
               <Value>cluster</Value>
               <Description>vector containing the cluster memberships.</Description>
            </ItemCell>
            <ItemCell>
               <Value>ROSS</Value>
               <Description>the Residual Orthogonal Sum of Squares for the solution.</Description>
            </ItemCell>
            <ItemCell>
               <Value>converged</Value>
               <Description>logical. True if at least one solution has converged.</Description>
            </ItemCell>
            <ItemCell>
               <Value>nconverg</Value>
               <Description>the number of converged solutions (out of biter starts).</Description>
            </ItemCell>
            <ItemCell>
               <Value>X</Value>
               <Description>the (scaled if selected) dataset.</Description>
            </ItemCell>
            <ItemCell>
               <Value>hpcoeff</Value>
               <Description>best hyerplane</Description>
            </ItemCell>
            <ItemCell>
               <Value>scaled</Value>
               <Description>logical. Is the data scaled?</Description>
            </ItemCell>
            <ItemCell>
               <Value>k</Value>
               <Description>the number of clusters to be found.</Description>
            </ItemCell>
            <ItemCell>
               <Value>biter</Value>
               <Description>the biter setting used.</Description>
            </ItemCell>
            <ItemCell>
               <Value>niter</Value>
               <Description>the niter setting used.</Description>
            </ItemCell>
            <ItemCell>
               <Value>class</Value>
               <Description>'lga'.</Description>
            </ItemCell>
         </Struct>
      </Item>
   </OutArgs>
   <MoreAbout><!--MORE ABOUT SECTION--></MoreAbout>
   <Acknowledgements><!--ACKNOWLEDGEMENTS SECTION--></Acknowledgements>
   <References><!--REFERENCES SECTION-->
      <Item>Van Aelst, S. and Wang, X. and Zamar, R. and Zhu, R. (2006) ?Linear&#xD;
 Grouping Using Orthogonal Regression?, Computational Statistics and Data&#xD;
 Analysis 50, 1287?1312.</Item>
   </References>
   <SeeAlso><!--SEE ALSO SECTION-->
      <Item>rlga</Item>
   </SeeAlso>
   <Ex><!--EXAMPLES SECTION-->
      <Item>
         <Title>lga with all default options.</Title>
         <Desc/>
         <MATLABcode>
    X=load('X.txt');&#xD;
    out=lga(X,3);&#xD;</MATLABcode>
         <Exec>1</Exec>
      </Item>
      <Item>
         <Title>lga with all niter = 1000 and biter = 3000.</Title>
         <Desc/>
         <MATLABcode>
    X=load('X.txt');&#xD;
    out=lga(X,4,'niter',1000,'biter',3000);&#xD;</MATLABcode>
         <Exec>0</Exec>
      </Item>
   </Ex>
   <ExtraEx><!--EXTRA EXAMPLES SECTION--></ExtraEx>
</HelpXML>